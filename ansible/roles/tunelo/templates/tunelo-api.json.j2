{
    "command": "tunelo-api",
    "config_files": [
        {
            "source": "{{ container_config_directory }}/tunelo.conf",
            "dest": "/etc/tunelo/tunelo.conf",
            "owner": "tunelo",
            "perm": "0600"
        }{% if tunelo_policy_file is defined %},
        {
            "source": "{{ container_config_directory }}/{{ tunelo_policy_file }}",
            "dest": "/etc/tunelo/{{ tunelo_policy_file }}",
            "owner": "tunelo",
            "perm": "0600"
        }{% endif %}
    ],
    "permissions": [
        {
            "path": "/var/log/kolla/tunelo",
            "owner": "tunelo:tunelo",
            "recurse": true
        }
    ]
}
